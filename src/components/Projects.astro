---
import { projects } from '../data/projects';
import ProjectCard from './ProjectCard.astro';
---

<section id="projects" class="min-h-screen py-24 px-6 md:px-24 lg:px-32">
  <div class="max-w-4xl mx-auto">
  <div class="mb-12">
    <h2 class="text-3xl md:text-4xl font-bold text-title-light mb-4 flex items-center gap-4">
      <span class="text-primary font-mono text-xl md:text-2xl font-normal">04.</span>
      Projects I've built
      <div class="flex-1 h-px bg-title-dark/30"></div>
    </h2>
  </div>

  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
    {projects.map((project, index) => (
      <div class={index === projects.length - 1 ? 'md:col-span-2 lg:col-span-3' : ''}>
        <ProjectCard project={project} />
      </div>
    ))}
  </div>
  </div>
</section>
